<% include ../partials/header %>

<h4><%= currentUser %></h4>

<div class="container">
    <header class="jumbotron">
        <div class = "container">
            <h1>projects!</h1>
            <p>View our projects</p>
            <p>
                <a class = "btn btn-primary btn-lg" href="/projects/new">Add New Project</a>
            </p>        
                
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our best sites</h3>
        </div>
    </div>



<div class = "d-flex align-content-start flex-wrap">
    <%  projects.forEach(function(project){%>
        <div class="col-md-4 card-deck">
            <div class="card" >
                <img class="card-image-top img-fluid img-thumbnail" src="<%=project.image%>" alt="pic" style="min-height: 150px">
                <div class="card-body">
                    <div class="card-title">
                        <h4><%=project.name%></h4>    
                    </div>
                    <a href="/projects/<%= project._id %>" class="card-link">Show more</a>
                </div>
            </div>    
        </div>
    <%}); %>
    </div>
</div>



<% include ../partials/footer %>